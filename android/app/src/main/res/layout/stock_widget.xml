<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingHorizontal="12dp"
    android:paddingVertical="8dp">

    <!-- Trending Down Icon -->
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_trending_down"
        android:tint="?android:attr/colorError"
        android:layout_marginEnd="8dp" />

    <!-- Symbol and Label -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/stock_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AAPL"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top Decline"
            android:textSize="9sp"
            android:textColor="?android:attr/textColorSecondary" />

    </LinearLayout>

    <!-- Price -->
    <TextView
        android:id="@+id/stock_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$150.25"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginEnd="8dp" />

    <!-- Change (percent above absolute) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="4dp"
        android:gravity="center">

        <TextView
            android:id="@+id/stock_change_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-5.2%"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?android:attr/colorError"
            android:background="@drawable/change_badge_background"
            android:paddingHorizontal="8dp"
            android:paddingVertical="3dp" />

        <TextView
            android:id="@+id/stock_change_abs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-$7.92"
            android:textSize="12sp"
            android:textStyle="normal"
            android:textColor="?android:attr/colorError"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <!-- Refresh Button -->
    <ImageView
        android:id="@+id/refresh_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_refresh"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:clickable="true" />

</LinearLayout>