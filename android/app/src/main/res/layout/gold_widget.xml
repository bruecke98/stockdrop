<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gold_widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gold_widget_background"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_gold"
            android:tint="#FFD700" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Gold Price"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary" />

        <ImageView
            android:id="@+id/refresh_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_refresh"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:tint="?android:attr/textColorSecondary" />

    </LinearLayout>

    <!-- Price Information Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/gold_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GOLD"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:id="@+id/gold_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="$2,025.50"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:id="@+id/gold_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+1.2%"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:background="@drawable/change_badge_background"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp" />

    </LinearLayout>

    <!-- Chart Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/gold_chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="Gold price chart" />

    </LinearLayout>

    <!-- Time Period Indicator -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="30D"
        android:textSize="10sp"
        android:textColor="?android:attr/textColorSecondary"
        android:gravity="center" />

</LinearLayout>