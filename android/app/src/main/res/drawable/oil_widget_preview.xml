<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#8B4513"
                android:endColor="#A0522D"
                android:angle="135" />
            <corners android:radius="12dp" />
            <stroke
                android:width="2dp"
                android:color="#654321" />
        </shape>
    </item>
    
    <!-- Oil Icon -->
    <item
        android:width="20dp"
        android:height="20dp"
        android:gravity="center_horizontal|top"
        android:top="12dp">
        <shape android:shape="oval">
            <solid android:color="#654321" />
            <stroke
                android:width="1dp"
                android:color="#000000" />
        </shape>
    </item>
    
    <!-- Title Text Simulation -->
    <item
        android:width="50dp"
        android:height="3dp"
        android:gravity="center_horizontal|top"
        android:top="38dp">
        <shape android:shape="rectangle">
            <solid android:color="#000000" />
            <corners android:radius="1dp" />
        </shape>
    </item>
    
    <!-- Price Text Simulation -->
    <item
        android:width="70dp"
        android:height="4dp"
        android:gravity="center_horizontal|top"
        android:top="48dp">
        <shape android:shape="rectangle">
            <solid android:color="#000000" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    
    <!-- Chart Line Simulation -->
    <item
        android:width="100dp"
        android:height="1.5dp"
        android:gravity="center_horizontal|bottom"
        android:bottom="15dp">
        <shape android:shape="rectangle">
            <solid android:color="#8B4513" />
        </shape>
    </item>
    
    <!-- Chart Line 2 -->
    <item
        android:width="80dp"
        android:height="1.5dp"
        android:gravity="center_horizontal|bottom"
        android:bottom="12dp">
        <shape android:shape="rectangle">
            <solid android:color="#8B4513" />
        </shape>
    </item>
</layer-list>